}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div> 
        <br /> <br />

        @Html.ValidationSummary()

        @using(Html.BeginForm())
        {
            if (ViewBag.count == 0)
            { <strong>There are no folders</strong><br />
                <strong>Enter root Folder Name</strong><br /><br />}
            else
            {
            <strong>Folder List</strong>
              
                 @Html.DropDownList("folders");
                
                <br /><br />
                <p>Please select the base folder where you want to create the new Sub-Folder.  </p><br />
                
            }
            
            @Html.DisplayFor(x => x.Name)
            
            @Html.TextBoxFor(x => x.Name)
            
            <br /><br />
            
            <input type="submit" value="Add" />
            
        }
    </div>
</body>
</html>
