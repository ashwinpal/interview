@model IEnumerable<intelex_interview.Models.folderListModel>

@functions{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        .f{
            display:block;
            background-color:yellowgreen;
            width: 100px;

        }

        .disp{
            display:none;
        }
    </style>
</head>
<body>
 
        <br /><br />

            <h2>List of folders</h2>
            
            @if (ViewBag.count == 0)
            { <strong>There are no folders</strong>}
            else
            {
               @helper Showfolder(IEnumerable<intelex_interview.Models.folderListModel> f)
                {
                    <ul>    
                        @foreach ( var record in f)
                        {                          
                            <li>
                                @record.Name
                                                              
                                 @if(record.subfolders!=null)
                                {
                                    @Showfolder(record.subfolders)
                                }
                            </li>
                            }                       
                    </ul>
                  
                    
                }
                
                @Model.First().Name;
                
                @Showfolder(Model.First().subfolders)

            }
            
        
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script>
        $("div.f").click(function(){$(this).toggleClass("disp")});
    </script>

</body>
</html>
